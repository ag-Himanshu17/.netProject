@model DataModel
@{
    ViewData["Title"] = "Create";
}
<h3>Create</h3>
<div class="row">
	<div class="col-md-12">
		<div class="box box-primary">
			<div class="box-header with-border">
				<a asp-action="index" asp-controller="Data"><i class="fa fa-arrow-left"></i> Back Menu</a>
			</div>
			<form role="form" asp-action="create" asp-controller="Data" method="post" enctype="multipart/form-data">
				<div class="box-body">
					<div class="form-group">
						<label>Enter Title of your Message</label>
						<input asp-for="Title" class="form-control" placeholder="Enter Title">
					</div>
					<div class="form-group">
						<label>File</label>
						<input type="file" name="ImagePath" class="form-control" />
					</div>
				</div>
				<div class="box-footer">
					<button type="submit" class="btn btn-primary">Submit</button>
					<button type="reset" class="btn btn-waring">Reset</button>
				</div>
			</form>
		</div>
	</div>
</div>

