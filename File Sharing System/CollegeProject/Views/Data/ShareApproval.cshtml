@model IList<ShareModel>
@{
    ViewData["Title"] = "ShareApproval";
}
@if (TempData["SuccessMessage"] != null)
{
	<div class="alert alert-success">
		@TempData["SuccessMessage"]
	</div>
}
<div class="row">
	<div class="col-xs-12">
		<div class="box">
			<div class="box-header">
				<h1>Shared File Approval</h1>
			</div>
			<div class="box-body">
				<table class="table table-bordered table-hover">
					<thead>
						<tr>
							<th>S.No.</th>
							<th>FileName</th>
							<th>View File</th>
							<th>ReciverId</th>
							<th>Status</th>
						</tr>
					</thead>
					<tbody>
						@{
							int i = 1;
						}
						@foreach (var item in Model)
						{
							<tr>
								<td>@i</td>
								<td>@item.Data.Title</td>
								@if (!string.IsNullOrEmpty(item.Data.FileName))
								{
									<td><a href='~/uploads/@item.Data.FileName' target="_blank"><i class="fa fa-eye"></i>View</a></td>
								}
								<td>@item.Reciever.UserName</td>
								<td>
									<a asp-action="Approved" asp-controller="Data" asp-route-id="@item.Id" class="btn btn-success btn-xs">Approve</a>
								</td>
							</tr>
							{
								i++;
							}
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
